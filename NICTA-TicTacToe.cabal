name:                NICTA-TicTacToe
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             MIT
license-file:        LICENSE
author:              Amar Shah
maintainer:          amar47shah@gmail.com
-- copyright:           
category:            Game
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Game, Game.Internal, Opponent
  default-language:    Haskell2010
  ghc-options:         -Wall -Werror
  hs-source-dirs:      src
  build-depends:       base >= 4.8 && < 5
                     , array
                     , random

executable tictactoe
  default-language:    Haskell2010
  ghc-options:         -Wall -Werror
  hs-source-dirs:      driver
  main-is:             Main.hs
  build-depends:       base >= 4.8 && < 5
                     , NICTA-TicTacToe

test-suite test
  type:              exitcode-stdio-1.0
  default-language:  Haskell2010
  ghc-options:       -Wall -Werror
  hs-source-dirs:    test
  main-is:           Spec.hs
  build-depends:     base >= 4.8 && < 5
                   , NICTA-TicTacToe
                   , tasty >= 0.10
                   , tasty-hunit >= 0.9
                   , tasty-quickcheck >= 0.8
